        <img src="<%= data[0].image_link5 %>" alt="" width="18%" height="200"
             style="margin:10px;background-position:center center;background-color: grey; border-radius: 15px">
        <form method="get" action="/taskboard">
            <input type="submit" name="submit" value="Change image"
                   style=" animation:bouncy 5s infinite linear;  position:relative; left: 0px; right: 0px; margin-top: 30px;  position: absolute;   left: 50%; transform: translate(-50%,-50%);">
        </form>
        <br>
        <br>
        <br>
        <br>
        <div style="background-color: white; height: 0.5px; width: 100%"/>
        <br>
        <br>
        <a style="font-size: 33px; color: white; width: 100%; text-align: center; -ms-transform: translateY(-50%); transform: translateY(-50%)">Bài
            viết mới</a>
        <br>
        <br>
        <br>
        <br>
        <% for (var i = 0; i < dataNewPaper.length; i++){ %>
            <div style="position:relative">
                <input hidden name="id_new" value="<%= dataNewPaper[i].id %>">
                <img src="<%= dataNewPaper[i].linksHD %>" style="position:absolute;width: 120px; height: 120px"/>
                <a style="color: white; margin-left: 170px; font-size: 21px">    <%= dataNewPaper[i].titles %></a>
                <br>
                <br>
                <div style="color: white; margin-left: 170px; top: 50px; max-lines: 4; height: 4.5em;  overflow: hidden;">    <%= dataNewPaper[i].content %></div>
            </div>
            <br>
            <br>
            <br>
            <br>
        <% } %>
    </div>
    <form>
        <input type="submit"  name="submit" style="display: block; position: fixed;bottom: 20px; right: 30px; z-index: 99;font-size: 18px;border: none;outline: none;background-color: red;color: white;cursor: pointer;padding: 15px;border-radius: 4px;" id="myBtn" title="Go to top" value="Thêm Bài viết"></input>
    </form>
