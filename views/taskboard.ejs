        <br>
        <br>
        <br>
        <img src="<%= data[0].image_link1 %>" alt="" width="18%" height="200"
             style="margin:10px;background-position:center center;background-color: grey; border-radius: 15px">
        <img src="<%= data[0].image_link2 %>" alt="" width="18%" height="200"
             style="margin:10px;background-position:center center;background-color: grey; border-radius: 15px">
        <img src="<%= data[0].image_link3 %>" alt="" width="18%" height="200"
             style="margin:10px;background-position:center center;background-color: grey; border-radius: 15px">
