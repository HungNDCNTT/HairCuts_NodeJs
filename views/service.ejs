<div id="main-content" class="taskboard">
    <H3 style=" display: inline-block; color: white;padding: 10px; margin-left: 25px">Danh sách dịch vụ (<%= services.length%>)</H3>
    <ul style="">
        <% for (var i = 0; i < services.length; i++){ %>
            <li
                    style="color: white; list-style-type: none;background-color: #61b4c9; border-radius: 15px; padding: 15px;  margin-top: 40px; width: auto">
                <% if(!services[i].service_name == ""){ %>
                    <%= "Tên dịch vụ: " + services[i].service_name %>
                <% } else{ %>
                    <%= "Tên dịch vụ: " + "No Mention" %>
                <% } %>
                <br>
                <div style="display: grid; position: absolute;  width: 100px;height: 30px; right: 30px">
                    <button hidden name="change" type="submit" id="1" value="Edit"
                            style=" right: 6px;top: 2px; border-radius: 4px; height: 100%; background-color: green; color: white;  cursor: pointer">
                        Edit
                    </button>
                    <form method="get" action="/services">
                        <input hidden name="id" value="<%= services[i]._id %>">
                        <button name="submit" type="submit" id="2" value="DeleteService"
                                style=" right: 6px; height: 100% ; width: 100px; border-radius: 5px; background-color: darkred; color: white; cursor: pointer ">
                            Xóa
                        </button>
                    </form>
                </div>
                <% if(!services[i].service_price == ""){ %>
                    <%= "Giá tiền: " + services[i].service_price + "K"%>
                <% } else{ %>
                    <%= "Giá tiền: " + "0K" %>
                <% } %>
                <br>
                <% if(!services[i].estimate_times == ""){ %>
                    <%= "Thời gian dự tính làm: " + services[i].estimate_times +" phút"%>
                <% } else{ %>
                    <%= "Thời gian dự tính làm: " + "No Mention" +" phút"%>
                <% } %>
            </li>
        <% } %>
    </ul>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>


    <form>
        <input type="submit" name="submit"
               style="display: block; position: fixed;bottom: 20px; right: 30px; z-index: 99;font-size: 18px;border: none;outline: none;background-color: blue;color: white;cursor: pointer;padding: 15px;border-radius: 10px;"
               id="myBtn" title="Go to top" value="Thêm dịch vụ"></input>
    </form>
</div>

