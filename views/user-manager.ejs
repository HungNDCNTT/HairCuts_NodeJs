<div id="main-content" class="taskboard">
    <ul style="position: relative">
        <li style="color:white;font-size: 22px">
            <%= "Total Users: " + users.length %>
        </li>
        <% for (var i = 0; i < users.length; i++){ %>
        <div style="  width: 30% ">
            <li style="color: white; list-style-type: none;background-color: lightskyblue; border-radius: 15px; padding: 30px;  margin-top: 20px;">
                <% if(!users[i].name == ""){ %>
                    <%= "User Name: " + users[i].name %>
                <% } else{ %>
                    <%= "User Name: " + "No Mention" %>
                <% } %>
                <br>
                    <% if(!users[i].email == ""){ %>
                        <%= "Email: " + users[i].email %>
                    <% } else{ %>
                        <%= "Email: " + "No Mention" %>
                    <% } %>
                    <br>
                <% if(!users[i].phone == ""){ %>
                    <%= "Phone: " + users[i].phone %>
                <% } else{ %>
                    <%= "Phone: " + "No Mention" %>
                <% } %>
                <br>
                <div style="border-radius: 20px">
                    <img name="img_avt" src="<%= users[i].avatar_link %>" alt="No image" width="200" height="200">
                </div>
                <br>
            </li>
        </div>
        <% } %>
    </ul>
</div>

