<script>
    // cwidget scroll
    $('.chat-list').slimScroll({
        height: 'calc(100vh - 220px)',
        wheelStep: 10,
        touchScrollStep: 50,
        color: '#2b2e33',
        size: '4px',
        borderRadius: '3px',
        alwaysVisible: true,
        position: 'right',
    });

    // cwidget scroll
    $('.chat-history ul').slimScroll({
        height: 'calc(100vh - 340px)',
        wheelStep: 10,
        touchScrollStep: 50,
        color: '#2b2e33',
        size: '4px',
        borderRadius: '3px',
        alwaysVisible: false,
        position: 'right',
    });
</script>
